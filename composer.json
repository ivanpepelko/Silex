{
    "name": "silex/silex",
    "description": "The PHP micro-framework based on the Symfony Components",
    "keywords": [
        "microframework"
    ],
    "homepage": "https://silex.symfony.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabien@symfony.com"
        },
        {
            "name": "Igor Wiedler",
            "email": "igor@wiedler.ch"
        }
    ],
    "require": {
        "php": "^8.0",
        "pimple/pimple": "^3.3",
        "symfony/event-dispatcher": "^5.1",
        "symfony/http-foundation": "^5.1",
        "symfony/http-kernel": "^5.1",
        "symfony/routing": "^5.1"
    },
    "require-dev": {
        "doctrine/dbal": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "monolog/monolog": "^2.1",
        "roave/security-advisories": "dev-latest",
        "swiftmailer/swiftmailer": "^6",
        "symfony/asset": "^5.1",
        "symfony/browser-kit": "^5.1",
        "symfony/config": "^5.1",
        "symfony/css-selector": "^5.1",
        "symfony/doctrine-bridge": "^5.1",
        "symfony/dom-crawler": "^5.1",
        "symfony/error-handler": "^5.1",
        "symfony/expression-language": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/form": "^5.1",
        "symfony/intl": "^5.1",
        "symfony/monolog-bridge": "^5.1",
        "symfony/options-resolver": "^5.1",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/process": "^5.1",
        "symfony/security-core": "^5.1",
        "symfony/security-csrf": "^5.1",
        "symfony/security-guard": "^5.1",
        "symfony/security-http": "^5.1",
        "symfony/serializer": "^5.1",
        "symfony/translation": "^5.1",
        "symfony/twig-bridge": "^5.1",
        "symfony/validator": "^5.1",
        "symfony/var-dumper": "^5.1",
        "symfony/web-link": "^5.1",
        "twig/twig": "^3.1"
    },
    "replace": {
        "silex/api": "self.version",
        "silex/providers": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Silex\\": "src/Silex"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Silex\\Tests\\": "tests/Silex/Tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
